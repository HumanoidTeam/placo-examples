<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bench_head">
    <xacro:property name="base_link_radius" value="0.2"/>
    <xacro:property name="base_link_length" value="0.1"/>

    <!-- BASE LINK -->
    <link name="base_link">
      <visual>
        <origin xyz="0 0 -${base_link_length/2}" rpy="0 0 0" />

        <geometry>
          <cylinder radius="${base_link_radius}" length="${base_link_length}" />
        </geometry>

        <material name="gray">
          <color rgba=".2 .2 .2 1" />
        </material>
      </visual>
    </link>

    <xacro:include filename="prealpha_head.urdf"/>
    <xacro:prealpha_head parent="base_link"/>

</robot>
